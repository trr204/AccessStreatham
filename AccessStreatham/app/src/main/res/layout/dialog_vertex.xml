<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vertex_dialog"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/vertex_select_source_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/vertex_select_source"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/vertex_select_destination_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/vertex_select_destination"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vertex_select_source_button" />

    <Button
        android:id="@+id/vertex_select_incident_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/vertex_select_incident"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vertex_select_destination_button" />

</android.support.constraint.ConstraintLayout>